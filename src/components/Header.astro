---
import { Image } from "astro:assets";
import YoDibujo from "../assets/yoDibujo.webp";
import linkedin from "../assets/linkedin.svg";
import github from "../assets/Github_dark.svg";
import CV from "../assets/cv.svg";
---

<header class="header">
  <figure class="header__image-container">
    <Image src={YoDibujo} alt="Valentín Tito en dibujo" class="header__image" />
  </figure>
  <div class="header__text-container">
    <h1 class="header__title">Valentín Tito</h1>
    <span class="header__subtitle">Desarrollador Frontend</span>
    <nav class="header__nav">
      <ul class="header__nav-list">
        <li class="header__nav-item">
          <a
            href="https://www.linkedin.com/in/valent%C3%ADn-tito-8601bb295/"
            target="_blank"
            rel="noopener noreferrer"
            class="header__nav-link"
          >
            <Image src={linkedin} alt="Icono de LinkedIn" class="header__nav-image" />
          </a>
        </li>
        <li class="header__nav-item">
          <a
            href="https://github.com/DonValen910"
            target="_blank"
            rel="noopener noreferrer"
            class="header__nav-link"
          >
            <Image src={github} alt="Icono de GitHub" class="header__nav-image" />
          </a>
        </li>
        <li class="header__nav-item">
          <a
            href="/Curriculum.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="header__nav-link"
          >
            <Image src={CV} alt="Icono de CV" class="header__nav-image" />
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 3rem 0;
  }

  .header__title {
    font-size: clamp(2.3rem, 3.5vw, 3.5rem);
    margin: 0;
    background-image: linear-gradient(92deg, #6a68d9 10%, #da6cae 60%, #f5a957);
    -webkit-text-fill-color: #0000;
    -webkit-background-clip: text;
  }

  .header__subtitle {
    font-size: clamp(1.1rem, 3.5vw, 1.5rem);
    color: #f5f5f5;
  }

  .header__image-container,
  .header__text-container {
    display: flex;
    align-items: center;
  }

  .header__text-container {
    flex-direction: column;
  }

  .header__image {
    border-radius: 50%;
    width: 12.5rem;
    height: 12.5rem;
    transition: 0.3s;
  }

  .header__image:hover {
    transform: scale(1.1);
  }

  .header__nav {
    margin-top: .5rem;
  }

  .header__nav-list {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .header__nav-item {
    display: grid;
    place-items: center;
  }

  .header__nav-image {
    width: clamp(2.5rem, 3.8vw, 2.5rem);
    height: clamp(2.5rem, 3.8vw, 2.5rem);
    transition: 0.3s;
  }

  .header__nav-image:hover {
    transform: scale(1.1);
  }

  @media (max-width: 450px) {
    .header {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
