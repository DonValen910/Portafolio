---
import { Image } from "astro:assets";
import YoDibujo from "../assets/yoDibujo.webp";
---

<header class="header">
  <div class="header__image-container">
    <Image src={YoDibujo} alt="Valentín Tito en dibujo" class="header__image" />
  </div>
  <div class="header__text-container">
    <h1 class="header__title">Valentín Tito</h1>
    <p class="header__subtitle">Desarrollador Frontend</p>
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 1rem;
  }

  .header__title {
    font-size: 2rem;
    margin: 0;
  }

  .header__subtitle {
    font-size: 1.5rem;
    margin: 0;
  }

  .header__image-container,
  .header__text-container {
    display: flex;
    align-items: center;
  }

  .header__text-container {
    flex-direction: column;
  }

  .header__image {
    border-radius: 50%;
    width: 6.25rem;
    height: 6.25rem;
    transition: .3s;
  }

  .header__image:hover {
    transform: scale(1.1);
  }
</style>
