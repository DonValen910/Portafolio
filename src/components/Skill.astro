---
import { Image } from "astro:assets";
import html from "../assets/skill/html.svg";
import css from "../assets/skill/css.svg";
import js from "../assets/skill/javascript.svg";
import astro from "../assets/skill/Astro_dark.svg";
import git from "../assets/skill/git.svg";
import supabase from "../assets/skill/supabase.svg";
import typescript from "../assets/skill/typescript.svg";
import php from "../assets/skill/php.svg";
import mysql from "../assets/skill/mysql.svg";
---

<section class="skills">
  <h2 class="skills__title">Habilidades</h2>
  <div class="skills__list">
    <div class="skills__list-item">
      <Image class="skills__list-item-image" src={html} alt="Imagen de HTML5" />
      <span class="skills__list-item-text">HTML</span>
    </div>

    <div class="skills__list-item">
      <Image class="skills__list-item-image" src={css} alt="Imagen de CSS" />
      <span class="skills__list-item-text">CSS</span>
    </div>

    <div class="skills__list-item">
      <Image class="skills__list-item-image" src={js} alt="Imagen de JS" />
      <span class="skills__list-item-text">JavaScript</span>
    </div>

    <div class="skills__list-item">
      <Image
        class="skills__list-item-image"
        src={astro}
        alt="Imagen de Astro"
      />
      <span class="skills__list-item-text">Astro</span>
    </div>

    <div class="skills__list-item">
      <Image class="skills__list-item-image" src={git} alt="Imagen de Git" />
      <span class="skills__list-item-text">Git</span>
    </div>

    <div class="skills__list-item">
      <Image
        class="skills__list-item-image"
        src={supabase}
        alt="Imagen de Supabase"
      />
      <span class="skills__list-item-text">Supabase</span>
    </div>

    <div class="skills__list-item">
      <Image
        class="skills__list-item-image"
        src={typescript}
        alt="Imagen de TypeScript"
      />
      <span class="skills__list-item-text">TypeScript</span>
    </div>

    <div class="skills__list-item">
      <Image class="skills__list-item-image" src={php} alt="Imagen de PHP" />
      <span class="skills__list-item-text">PHP</span>
    </div>

    <div class="skills__list-item">
      <Image
        class="skills__list-item-image"
        src={mysql}
        alt="Imagen de MySQL"
      />
      <span class="skills__list-item-text">MySQL</span>
    </div>
  </div>
</section>

<style>
  .skills {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem 0;
    margin: 1rem 1.8rem;
  }

  .skills__title {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .skills__list {
    display: flex;
    justify-content: space-around;
    width: 100%;
    flex-wrap: wrap;
    gap: 2.5rem;
  }

  .skills__list-item {
    width: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-align: center;
    color: #f5f5f5;
    font-size: 1.2rem;
  }

  .skills__list-item-image {
    width: 60px;
    height: 60px;
  }
</style>
